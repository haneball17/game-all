<Window x:Class="GameAll.MasterGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="game-all" Height="600" Width="900">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="打开注入器目录" Click="OnOpenInjectorFolder" />
            </ToolBar>
        </ToolBarTray>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="状态：未连接" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock x:Name="InjectorText" Text="注入器：未运行" />
            </StatusBarItem>
        </StatusBar>

        <TabControl>
            <TabItem Header="Helper">
                <ContentControl x:Name="HelperHost" />
            </TabItem>
            <TabItem Header="Sync">
                <ContentControl x:Name="SyncHost" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
