<UserControl x:Class="DNFSyncBox.Views.SyncView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="420" Width="520">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8">
      <TextBlock Name="PauseText" FontSize="16" FontWeight="Bold" Text="状态：--" />
      <TextBlock Name="WindowCountText" Margin="0,4,0,0" Text="窗口：--" />
      <TextBlock Name="MasterText" Margin="0,4,0,0" Text="主控：--" />
      <TextBlock Name="ForegroundText" Margin="0,4,0,0" Text="前台：--" />
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
      <Button Name="ToggleButton" Width="120" Height="28" Click="OnTogglePause">暂停/恢复</Button>
      <Button Name="RefreshButton" Width="120" Height="28" Margin="8,0,0,0" Click="OnRefresh">立即扫描</Button>
    </StackPanel>

    <GroupBox Grid.Row="2" Header="运行日志">
      <ListBox Name="LogList" />
    </GroupBox>

    <TextBlock Grid.Row="3" Margin="0,8,0,0" Foreground="Gray"
               Text="热键：Alt + .  |  方案可配置（共享内存伪造）" />
  </Grid>
</UserControl>
